{
    "coc.preferences.formatOnSaveFiletypes": ["css", "markdown", "javascript", "graphql", "html", "yaml",  "json", "python"],

    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,


    "explorer.width": 30,
    "explorer.icon.enableNerdfont": true,
    "explorer.previewAction.onHover": false,
    "explorer.keyMappings": {
        "i": false, // cancel default mapkey

        "l": "nodePrev",
        "k": "nodeNext",
        "gl": "expandablePrev",
        "gk": "expandableNext",

        "*": "toggleSelection",
        "<tab>": "actionMenu",

        "j": "collapse",
        ";": ["expandable?", "expand", "open"],
        "K": ["toggleSelection", "nodeNext"],
        "L": ["toggleSelection", "nodePrev"],
        "g;": "expandRecursive",
        "gj": "collapseRecursive",
        "o": "expandOrCollapse",
        "<cr>": ["expandable?", "cd", "open"],
        "e": "open",
        "s": "open:split",
        "S": "open:split:intelligent",
        "E": "open:vsplit",
        "t": "open:tab",
        "<bs>": "gotoParent",
        "gp": "preview:labeling",

        "y": "copyFilepath",
        "Y": "copyFilename",
        "c": "copyFile",
        "x": "cutFile",
        "p": "pasteFile",
        "d": "delete",
        "D": "deleteForever",

        "a": "addFile",
        "A": "addDirectory",
        "r": "rename",

        ".": "toggleHidden",
        "R": "refresh",

        "?": "help",
        "q": "quit",
        "<esc>": "esc",
        "X": "systemExecute",
        "gd": "listDrive",

        "f": "search",
        "F": "searchRecursive",

        "gf": "gotoSource:file",
        "gb": "gotoSource:buffer",

        "[[": "sourcePrev",
        "]]": "sourceNext",

        "[d": "diagnosticPrev",
        "]d": "diagnosticNext",

        "[c": "gitPrev",
        "]c": "gitNext",
        "<<": "gitStage",
        ">>": "gitUnstage"
      }
}
